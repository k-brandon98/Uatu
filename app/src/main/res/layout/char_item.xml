<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/char_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent=".4"
        android:contentDescription="@string/character_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/char_name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/biorhyme"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/char_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".5" />

    <TextView
        android:id="@+id/char_description"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent=".5"
        android:fontFamily="@font/comic_neue"
        android:textColor="@color/red"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/char_name"
        app:layout_constraintStart_toStartOf="@id/char_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>